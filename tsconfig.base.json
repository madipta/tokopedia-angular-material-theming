      ],
      "@/ui/components/primary-bar": [
        "packages/libs/ui/components/primary-bar/src/index.ts"
      ],
      "@/ui/components/saldo-info": [
        "packages/libs/ui/components/saldo-info/src/index.ts"
      ],
      "@/ui/components/shop-info": [
        "packages/libs/ui/components/shop-info/src/index.ts"
      ],
      "@/ui/core/dashboard": ["packages/libs/ui/core/dashboard/src/index.ts"],
      "@/ui/core/sidenav": ["packages/libs/ui/core/sidenav/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
